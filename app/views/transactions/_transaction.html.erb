<!-- Lucas can you display this as a horizontal list or table? -->
<tr class="transaction-item">
  <% @transactions.each do |t| %>
    <% if t.class_name == "member-fee" %>
        <td class="member-fee">
          <% if t.amount == 1000 %>
            <%= created_at.strftime("%A") + " Monthly Membership Fee" %>
          <% else %>
            <%= created_at.strftime("%Y") + " Annual Membership Fee" %>
          <% end %>
        </td>
    <% else %>
        <td class="deposit">
          <%= "Deposit top up to $40" %>
        </td>

    <% end %>
    <td><%= t.amount %></td>
    <td><%= t.settlement_date || "UNPAID" %></td>
    <td>
      <% if t.settlement_date %>
        <% if t.charge_id %>
          <%= link_to "Card", charge_path(t.charge_id) %>
        <% else %>
          <%= "Cash" %>
        <% end %>
      <% else %>
        <% link_to "Pay Now", new_charge_path %>
      <% end %>
    </td>
  <% end %>
</tr>