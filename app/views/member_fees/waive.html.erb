<%= form_for @member_fee do |f| %>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :placeholder => "Enter a reason for waiving this fee - i.e. volunteer" %>
  </div>
  <%= f.hidden_field :amount, :value => 0 %>
  <div class="submit"><%= f.submit "Waive this membership fee" %></div>
<% end %>