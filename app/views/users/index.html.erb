<div class="user">

	<h2>Users</h2>

	<% if current_user %>
		<p>Currently active users: <%= current_users_list %></p>
	<% end %>

	<% @users.each do |user| %>

		<h3 class="name"><%= user.first_name %> <%= user.last_name %></h3>
		<p class="role"><%= user.role %></p>
		<p class="email"><%= user.email %></p>
	  <p class="user-id">ID: <%= user.id %></p>

	<% end %>

</div>
