<div class="catalogue">

  <h2>Add Book</h2>

  <%= form_for(@book) do |book| %>

    <div class="field">
      <%= book.label :title %><br />
      <%= book.text_field :title %>
    </div>

    <div class="field">
      <%= book.label :subject_id %><br />
      <%= book.collection_select :subject_id, Subject.all, :id, :name, include_blank: true %>
    </div>

    <div class="field">
      <%= book.label :published %><br />
      <%= book.date_field :published %>
    </div>

    <div class="field">
      <%= book.label :publisher %><br />
      <%= book.text_field :publisher %>
    </div>

    <div class="field">
      <%= book.label :page_count %><br />
      <%= book.number_field :page_count %>
    </div>

    <div class="field">
      <%= book.label :price %><br />
      <%= book.number_field :price %>
    </div>

    <div class="field">
      <%= book.label :description %><br />
      <%= book.text_field :description %>
    </div>

    <div class="field">
      <%= book.label :cover_image %><br />
      <%= book.text_field :cover_image %>
    </div>

    <div class="field">
      <%= book.label :isbn %><br />
      <%= book.text_field :isbn %>
    </div>

    <div class="submit"><%= book.submit %></div>

  <% end %>

  </div><!-- end .catalogue -->