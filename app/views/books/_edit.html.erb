<!-- edit book form -->

<%= form_for(@book) do |book| %>

    <%= book.label :title %><br />
    <%= book.text_field :title %>

    <%= book.label :subject %><br />
    <%= book.text_area :subject %>

    <%= book.label :published %><br />
    <%= book.date_field :published %>

    <%= book.label :publisher %><br />
    <%= book.text_field :publisher %>

    <%= book.label :page_count %><br />
    <%= book.number_field :page_count %>

    <%= book.label :price %><br />
    <%= book.number_field :price %>

    <%= book.label :description %><br />
    <%= book.text_field :description %>

    <%= book.label :cover_image %><br />
    <%= book.text_field :cover_image %>

    <%= book.label :isbn %><br />
    <%= book.text_field :isbn %>

    <%= book.submit %>

<% end %>