<!DOCTYPE html>
<html>
	<head>
	  <title>Hermetic Library Awesome</title>
	  <meta charset="UTF-8"><meta charset="en">
		<meta name="viewport" content="initial-scale-1.0,width=device-width">  
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	
	<body>
		<div id="wrapper">
			<header class="navigation" role="banner">
			  <div class="navigation-wrapper">
			    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
			    <nav role="navigation">
			      <ul id="js-navigation-menu" class="navigation-menu show">
								<li class="nav-link title"><%= link_to 'Hermetic Library Awesome', root_url %></li>
			      	<% if current_user == nil %> 
			      	<% elsif current_user.role == 'admin' %>	
				        <li class="nav-link more"><a href="javascript:void(0)">Library</a>
				        	<ul class="submenu">
						        <li><%= link_to "Catalogue", books_path %></li>
						        <li><%= link_to "Add Book", new_book_path %></li>
						        <li><%= link_to "User Holds" %></li>
						        <li><%= link_to "User Checkouts", new_check_out_path %></li>
						        <li><%= link_to "User Fines" %></li>
						      </ul>
						    </li>
						    <li class="nav-link more"><a href="javascript:void(0)">Users</a>
									<ul class="submenu">
						        <li class="nav-link"><%= link_to "User Profiles", users_path %></li>
						        <li class="nav-link"><%= link_to "Add User", new_user_path %></li>
						        <li class="nav-link"><%= link_to "Edit Admin Profile", edit_user_path(current_user.id) %></li>
						      </ul>
						    </li>
						    <li class="nav-link more">
						  <% else current_user.role == 'user' %>
								<li class="nav-link"><a href="javascript:void(0)">Library</a>
				        	<ul class="submenu">
						        <li class="nav-link"><%= link_to "Catalogue", books_path %></li>
						        <li class="nav-link"><%= link_to "Add Book" %></li>
						        <li class="nav-link"><%= link_to "Holds" %></li>
						        <li class="nav-link"><%= link_to "Checkouts" %></li>
						        <li class="nav-link"><%= link_to "Fines" %></li>
						      </ul>
						    </li>
						    <li class="nav-link more"><a href="javascript:void(0)">Users</a>
									<ul class="submenu">
						        <li class="nav-link"><%= link_to "Profile", users_path %></li>
						        <li class="nav-link"><%= link_to "Edit", edit_user_path(current_user.id) %></li>
						      </ul>
						    </li>
							<% end %>
			      </ul>
			    </nav>
			    <div class="navigation-tools">
				    <div class="search-bar">
				      <form role="search">
				        <input type="search" placeholder="Enter Search" />
				        <button type="submit">
				          <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png" alt="Search Icon">
				        </button>
				      </form>
				    </div>
				    <% if current_user == nil %>
				    	<%= link_to "Login", :login, :method => :get, class: "sign-up" %> 
			      <% elsif current_user.role == 'admin' %>	
			      	<%= link_to "Logout", :logout, :method => :post, class: "sign-up" %>
			      <% else current_user.role == 'user' %>
							<%= link_to "Logout", :logout, :method => :post, class: "sign-up" %>
						<% end %>
				  </div>
				</div>
			</header>

  		<%= yield %>

			</div><!-- end #main-content -->
		</div><!-- end #wrapper -->
	</body>
</html>
