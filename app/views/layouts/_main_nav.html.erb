<nav class="main-nav">
				<ul>
				  <% if current_user == nil %>
						<li><%= link_to "Login", :login %></li>				  	
				  <% elsif current_user.role == 'admin' %>					
				  	<li><%= link_to "Admin Panel", user_path(current_user.id) %></li> 
				   	<li><%= link_to "Logout", :logout, method: :post %></li> 
				  <% else current_user.role == 'user' %>
				  	<li><%= link_to "User Profile", user_path(current_user.id) %></li> 
				   	<li><%= link_to "Logout", :logout, method: :post %></li> 
				  <% end %>
				  </ul>
			</nav>

			<div class="alert">
			  <p id="notice"><%= flash[:notice] %></p>
			  <p id="alert"><%= flash[:alert] %></p>
			</div>